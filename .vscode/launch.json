    "version": "0.2.0",
    "configurations": [

        {
            "name": "launch as Master (tnt0)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/thermit",
            "args": ["/dev/tnt0", "m"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "make",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
